#####################################################
#
# 		  EVG EVENT RECORD
#
#####################################################

record(stringout, "$(Sec)-$(Sub):$(Dis)-$(Dev)$(Idx):EVDESC$(num)"){
	field(VAL, "$(desc)")
	field(DESC, "Description of the Event $(num)")
}
record(longout, "$(Sec)-$(Sub):$(Dis)-$(Dev)$(Idx):EVCODE$(num)"){
	field(DESC, "Event $(num) code")
	field(DRVH, "255")
	field(DRVL, "0")
	field(VAL, "$(code)")
}
record(longout, "$(Sec)-$(Sub):$(Dis)-$(Dev)$(Idx):EVTIME$(num)"){
	field(DESC, "Event $(num) timestamp")
	field(DRVL, "100")
	field(VAL, "$(time)")
}
record(bo, "$(Sec)-$(Sub):$(Dis)-$(Dev)$(Idx):EVDLYMODE$(num)"){
	field(DESC, "Delay mode (FIX | INCR)")
	field(ZNAM, "FIX")
	field(ONAM, "INCR")
	field(VAL, "$(mode)")
}
record(bo, "$(Sec)-$(Sub):$(Dis)-$(Dev)$(Idx):EVTRANSM$(num)"){
	field(DESC, "Transmission mode (ALWAYS | INJECTION)")
	field(ZNAM, "ALWAYS")
	field(ONAM, "INJECTION")
	field(VAL, "$(transm)")
}
#####################################################

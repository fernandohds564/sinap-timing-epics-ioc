#####################################################
#
# 		  EVG EVENT RECORD
#
#####################################################

record(stringout, "$(P)$(R)EVDESC$(num)"){
	field(VAL, "$(desc)")
	field(DESC, "Description of the Event $(num)")
}
record(longout, "$(P)$(R)EVCODE$(num)"){
	field(DESC, "Event $(num) code")
	field(DRVH, "255")
	field(DRVL, "0")
	field(VAL, "$(code)")
}
record(longout, "$(P)$(R)EVTIME$(num)"){
	field(DESC, "Event $(num) timestamp")
	field(DRVL, "100")
	field(VAL, "$(time)")
}
record(bo, "$(P)$(R)EVDLYMODE$(num)"){
	field(DESC, "Delay mode (FIX | INCR)")
	field(ZNAM, "FIX")
	field(ONAM, "INCR")
	field(VAL, "$(mode)")
}
record(mbbo, "$(P)$(R)EVTRANSM$(num)"){
	field(DESC, "Transmission mode (ALWAYS | INJECTION)")
	field(ZRVL, "0")
	field(ZRST, "NEVER")
	field(ONVL, "1")
	field(ONST, "ALWAYS")
	field(TWVL, "2")
	field(TWST, "INJECTION")
	field(VAL, "$(transm)")
}
#####################################################
